# Lombok Configuration File
# This file configures lombok behavior

# Enable builder pattern for all classes
lombok.builder.className = Builder

# Generate toString with field names
lombok.toString.includeFieldNames = true

# Use javax.annotation.Generated for generated code
lombok.addJavaxGeneratedAnnotation = true

# Disable warnings for experimental features
lombok.experimental.flagUsage = allow

# Set accessor chain fluent naming
lombok.accessors.chain = false
lombok.accessors.fluent = false

# Enable copy annotations to generated code
lombok.copyableAnnotations += org.springframework.data.mongodb.core.index.Indexed
lombok.copyableAnnotations += org.springframework.data.mongodb.core.mapping.Document
lombok.copyableAnnotations += io.swagger.v3.oas.annotations.media.Schema

# Suppress warnings
lombok.addLombokGeneratedAnnotation = true 